{
	"compilerOptions": {
		"target": "ES2020",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"forceConsistentCasingInFileNames": true,
		"lib": [
			"ES2020",
			"DOM",
			"DOM.Iterable"
		],
		"skipLibCheck": true,
		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"types": [
			"vite/client"
		],
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"./src/*"
			],
			"@assets/*": [
				"./src/assets/*"
			],
			"@gameObjects/*": [
				"./src/assets/gameObjects/*"
			],
			"@prefabs/*": [
				"./src/assets/prefabs/*"
			],
			"@game/*": [
				"./src/game/*"
			],
			"@utils": [
				"./src/utils.ts"
			],
		}
	},
	"include": [
		"./src",
	]
}